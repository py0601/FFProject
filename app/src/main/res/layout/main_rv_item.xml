<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/item_border">

    <ImageView
        android:id="@+id/FoodPhotoImg"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/FoodNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/FoodPhotoImg"
        app:layout_constraintTop_toTopOf="@+id/FoodPhotoImg"
        tools:text="Name" />

    <TextView
        android:id="@+id/FoodAddressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="4dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/FoodPhotoImg"
        app:layout_constraintStart_toStartOf="@+id/FoodPhotoImg"
        tools:text="Address" />

    <TextView
        android:id="@+id/FoodPhoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/FoodAddressTxt"
        app:layout_constraintStart_toEndOf="@+id/FoodAddressTxt"
        app:layout_constraintTop_toTopOf="@+id/FoodAddressTxt"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Phone" />



</androidx.constraintlayout.widget.ConstraintLayout>